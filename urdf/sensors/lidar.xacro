<?xml version="1.0" encoding="UTF-8"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:include filename="$(find ben_gazebo)/urdf/sensors/ben_3d_lidar.xacro"/>
  <xacro:macro name="lidar"
               params = "type:='16_beam'
                         name
                         x:=0.7 y:=0 z:=1.8
                         R:=0 P:=0 Y:=0">
    <xacro:if value="${type == '16_beam'}">
      <xacro:ben_3d_lidar name="${name}"
                           x="${x}" y="${y}" z="${z}"
                           R="${R}" P="${P}" Y="${Y}"
                           vertical_lasers="16"/>
      <!--specs for 16 beam lidar are implemented by default.
          See wamv_3d_lidar for those-->
    </xacro:if>
    <xacro:if value="${type == '32_beam'}">
      <xacro:ben_3d_lidar name="${name}"
                           x="${x}" y="${y}" z="${z}"
                           R="${R}" P="${P}" Y="${Y}"
                           vertical_lasers="32"
                           samples="2187"
                           min_vertical_angle="-0.186"
                           max_vertical_angle="0.54"/>
    </xacro:if>
  </xacro:macro>
</robot>
